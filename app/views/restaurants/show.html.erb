<div>
  <h1><%= @restaurant.name %></h1>
  <p class="edit"><%= link_to 'edit', edit_restaurant_path(@restaurant) %></p>
  <p class="delete"><%= link_to 'delete', restaurant_path(@restaurant), method: :delete %></p>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.number %></p>
  <p><%= @restaurant.category %></p>
</div>
<div>
  <% @restaurant.reviews.each do |review| %>
  <p><%= review.content %></p>
  <p><%= review.ratings %></p>
  <% end %>
</div>
<h2><%= link_to 'Back to all Restaurants', restaurants_path %></h2>
